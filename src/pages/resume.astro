---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Resume - Elizabeth Means" description="Resume and professional experience of Elizabeth Means">
	<Header />
	<main>
		<section class="page-header">
			<div class="container">
				<h1>Resume</h1>
				<p class="page-subtitle">Professional experience and skills</p>
				<a href="/resume.pdf" class="btn btn-primary" download>Download PDF</a>
			</div>
		</section>

		<section class="resume-section">
			<div class="container">
				<div class="resume-content">
					<div class="resume-section-block">
						<h2>Experience</h2>
						
						<div class="resume-item">
							<div class="resume-item-header">
								<h3>Senior UX Designer</h3>
								<span class="resume-date">2022 - Present</span>
							</div>
							<p class="resume-company">Company Name</p>
							<ul class="resume-details">
								<li>Led user research initiatives and translated insights into design solutions</li>
								<li>Collaborated with cross-functional teams to deliver user-centered products</li>
								<li>Created wireframes, prototypes, and high-fidelity designs</li>
								<li>Conducted usability testing and iterated based on feedback</li>
							</ul>
						</div>

						<div class="resume-item">
							<div class="resume-item-header">
								<h3>UX Designer</h3>
								<span class="resume-date">2020 - 2022</span>
							</div>
							<p class="resume-company">Company Name</p>
							<ul class="resume-details">
								<li>Designed user interfaces for web and mobile applications</li>
								<li>Performed user interviews and usability testing</li>
								<li>Created design systems and component libraries</li>
								<li>Worked closely with developers to ensure design implementation</li>
							</ul>
						</div>
					</div>

					<div class="resume-section-block">
						<h2>Education</h2>
						
						<div class="resume-item">
							<div class="resume-item-header">
								<h3>Bachelor of Science in Design</h3>
								<span class="resume-date">2016 - 2020</span>
							</div>
							<p class="resume-company">University Name</p>
						</div>
					</div>

					<div class="resume-section-block">
						<h2>Skills</h2>
						
						<div class="skills-grid">
							<div class="skill-category">
								<h4>Design</h4>
								<ul class="skill-list">
									<li>User Research</li>
									<li>Wireframing</li>
									<li>Prototyping</li>
									<li>UI Design</li>
									<li>Design Systems</li>
								</ul>
							</div>

							<div class="skill-category">
								<h4>Tools</h4>
								<ul class="skill-list">
									<li>Figma</li>
									<li>Adobe XD</li>
									<li>Sketch</li>
									<li>InVision</li>
									<li>Miro</li>
								</ul>
							</div>

							<div class="skill-category">
								<h4>Research</h4>
								<ul class="skill-list">
									<li>User Interviews</li>
									<li>Usability Testing</li>
									<li>Surveys</li>
									<li>Personas</li>
									<li>Journey Mapping</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>

<style>
	.page-header {
		padding: var(--spacing-2xl) 0 var(--spacing-xl);
		text-align: center;
		background: linear-gradient(135deg, var(--color-bg-light) 0%, var(--color-bg) 100%);
	}

	.page-header h1 {
		margin-bottom: var(--spacing-sm);
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-lg);
	}

	.btn {
		display: inline-block;
		padding: var(--spacing-sm) var(--spacing-lg);
		border-radius: var(--border-radius);
		font-weight: 600;
		transition: var(--transition);
		cursor: pointer;
		border: 2px solid transparent;
	}

	.btn-primary {
		background: var(--color-accent);
		color: white;
	}

	.btn-primary:hover {
		background: #4aa5c0;
		opacity: 1;
	}

	.resume-section {
		padding: var(--spacing-2xl) 0;
	}

	.resume-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.resume-section-block {
		margin-bottom: var(--spacing-2xl);
	}

	.resume-section-block h2 {
		border-bottom: 2px solid var(--color-accent);
		padding-bottom: var(--spacing-sm);
		margin-bottom: var(--spacing-lg);
	}

	.resume-item {
		margin-bottom: var(--spacing-xl);
		padding-bottom: var(--spacing-xl);
		border-bottom: 1px solid var(--color-border);
	}

	.resume-item:last-child {
		border-bottom: none;
		padding-bottom: 0;
	}

	.resume-item-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: var(--spacing-xs);
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}

	.resume-item-header h3 {
		margin-bottom: 0;
	}

	.resume-date {
		color: var(--color-text-light);
		font-size: 0.875rem;
		font-weight: 500;
	}

	.resume-company {
		color: var(--color-accent);
		font-weight: 500;
		margin-bottom: var(--spacing-sm);
	}

	.resume-details {
		list-style: none;
		padding-left: 0;
	}

	.resume-details li {
		padding-left: var(--spacing-md);
		position: relative;
		color: var(--color-text-light);
		line-height: 1.8;
		margin-bottom: var(--spacing-xs);
	}

	.resume-details li::before {
		content: 'â€¢';
		position: absolute;
		left: 0;
		color: var(--color-accent);
		font-weight: bold;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: var(--spacing-xl);
	}

	.skill-category h4 {
		color: var(--color-accent);
		margin-bottom: var(--spacing-sm);
		font-size: 1.125rem;
	}

	.skill-list {
		list-style: none;
		padding-left: 0;
	}

	.skill-list li {
		padding: var(--spacing-xs) 0;
		color: var(--color-text-light);
		border-bottom: 1px solid var(--color-border);
	}

	.skill-list li:last-child {
		border-bottom: none;
	}

	@media (max-width: 768px) {
		.resume-item-header {
			flex-direction: column;
		}

		.skills-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

